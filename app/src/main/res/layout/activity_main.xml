<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundimg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/poller_one"
                android:text="Filesio"
                android:textColor="@color/yellow"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="-34dp"
                android:fontFamily="@font/amaranth_bold"
                android:text="Send Files To Anywhere"
                android:textColor="@color/orange"
                android:textSize="20sp" />

        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/appcardview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/yellow"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/ivapp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/app"
                        android:layout_gravity="center"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/tvapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth_bold"
                        android:includeFontPadding="false"
                        android:text="Applications"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:padding="5dp"/>
                </LinearLayout>
                
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/photoscardview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="10dp"
>

                    <ImageView
                        android:id="@+id/ivphotos"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/photos"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvphotos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth_bold"
                        android:includeFontPadding="false"
                        android:text="Photos"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/videocardview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/green"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/ivvideo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/video"
                        android:padding="5dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvvideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth_bold"
                        android:includeFontPadding="false"
                        android:text="Video"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:padding="5dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

    </GridLayout>

        <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
            android:layout_marginLeft="15dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/audiocardview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/blue"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/ivaudio"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/audio"
                        android:padding="5dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvaudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth_bold"
                        android:includeFontPadding="false"
                        android:text="Audio"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:padding="5dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/documentcardview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/ivdocument"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/document"
                        android:padding="5dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvdocument"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth_bold"
                        android:includeFontPadding="false"
                        android:text="Documents"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:padding="5dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>


    </LinearLayout>

</ScrollView>